@{
    Layout = null;
}

@{ 
    string message = Request.QueryString["message"];
    int num = int.Parse(Request.QueryString["num"]);
    int count = num;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <ul>
            @for (int i = 0; i < num; i++)
            {
                count = count - 1;
                <li style="font-size: @count px">@message</li>
            }
        </ul>
    </div>
</body>
</html>
