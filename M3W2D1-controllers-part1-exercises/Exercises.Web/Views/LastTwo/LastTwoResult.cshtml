@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Exercises.Web.Models.LastTwoModel

<ul class="formInputGroup no-list-style">
    @for (int i = 0; i < Model.Words.Count; i++)
    {

        string word = Model.Words[i];

        if (word.Length > 2)
        {
            string minusTwo = word.Substring(0, word.Length - 2);
            string lastTwo = word.Substring(word.Length - 2, 2);

            <li>
                @Model.Words[i] : @minusTwo@lastTwo[1]@lastTwo[0]
            </li>
        }
        else
        {
            <li>@Model.Words[i] : @Model.Words[i]</li>
        }


    }

</ul>



